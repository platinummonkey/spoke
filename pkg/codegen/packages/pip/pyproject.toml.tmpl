[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{.PackageName}}"
version = "{{.Version}}"
description = "Protocol Buffer generated code for {{.ModuleName}}"
readme = "README.md"
requires-python = ">=3.8"
dependencies = [
    "protobuf=={{.ProtobufVersion | default "4.25.1"}}",
{{- if .IncludeGRPC}}
    "grpcio=={{.GRPCVersion | default "1.60.0"}}",
    "grpcio-tools=={{.GRPCVersion | default "1.60.0"}}",
{{- end}}
{{- range .Dependencies}}
    "{{.Name}}=={{.Version}}",
{{- end}}
]

[tool.setuptools]
packages = ["{{.PackageName}}"]
